<div class="col-md-3 col-sm-6">
  <div class="product-grid4 pic-custom">
    <div class="product-image4">
      <%= link_to product do %>
        <%= load_image_product product %>
      <% end %>
      <span class="product-new-label"><%= t "product.new" %></span>
      <span class="product-discount-label"><%= t "product.discount" %></span>
    </div>
    <div class="product-content">
      <h3 class="title">
        <%= product.name %>
      </h3>
      <div class="price">
        <%= number_to_currency product.price %>
      </div>
      <%= link_to t("product.add_to_cart"), "#", class: "add-to-cart" %>
    </div>
  </div>
</div>
