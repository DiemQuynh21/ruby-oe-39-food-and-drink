<div class="col-md-3 col-sm-6">
  <div class="product-grid4 pic-custom">
    <div class="product-image4">
      <%= link_to product do %>
        <%= load_image_product product %>
      <% end %>
      <span class="product-new-label"><%= t "product.new" %></span>
      <span class="product-discount-label"><%= t "product.discount" %></span>
    </div>
    <div class="product-content">
      <h3 class="title">
        <%= product.name %>
      </h3>
      <div class="price">
        <%= number_to_currency product.price %>
      </div>
      <%= form_tag(carts_path, method: :post, remote: true) do  %>
        <%= hidden_field_tag(:product_id, product.id) %>
        <%= hidden_field_tag(:quantity, Settings.product.min_quantity) %>
        <%= button_tag(type: "submit", class: "add-to-cart") do %>
          <i class="fa fa-shopping-cart"> <%= t("product.add_to_cart") %></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
