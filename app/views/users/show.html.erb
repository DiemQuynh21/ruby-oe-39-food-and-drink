<section class="section about-section gray-bg" id="about">
  <div class="container">
    <div class="row align-items-center flex-row-reverse">
      <div class="col-lg-6">
        <div class="about-text go-to">
          <%= link_to t("order.order_history"),user_orders_path(current_user), class: "btn btn-lg btn-primary" %>
          <h3 class="dark-color"><%= t "user.about_me" %></h3>
          <div class="row about-list">
            <div class="col-md-6">
              <div class="media">
                <label><%= t "user.name" %></label>
                <p><%= @user.name %></p>
              </div>
              <div class="media">
                <label><%= t "user.address" %></label>
                <p><%= @user.address %></p>
              </div>
              <div class="media">
                <label><%= t "user.role" %></label>
                <p><%= @user.role %></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="media">
                <label><%= t "user.email" %></label>
                <p><%= @user.email %></p>
              </div>
              <div class="media">
                <label><%= t "user.phone" %></label>
                <p><%= @user.phone_number %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="about-avatar">
          <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
        </div>
      </div>
    </div>
  </div>
</section>
